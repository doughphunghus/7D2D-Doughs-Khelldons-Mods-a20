<!--
Khelldon - Lets add mortar into the game
We'll extend from concrete mix to save time
-->
<append xpath="/items">
<item name="khelldonMortar">
	<property name="Extends" value="resourceConcreteMix"/>
	<property name="CustomIcon" value="khelldonMortarIcon"/>
	<property name="DescriptionKey" value="khelldonMortarDesc"/>
</item>
<item name="khelldonMortarLime">
	<property name="Extends" value="resourceCement"/>
	<property name="CustomIcon" value="resourceCement"/>
	<property name="CustomIconTint" value="184,184,184"/> <!-- DOUGH: DArk grey color semi matches Mortar color, and easier to distinguish from cement color-->
	<property name="DescriptionKey" value="khelldonMortarLimeDesc"/>
</item>
</append>




